<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#66D3D3D3"
              android:orientation="vertical">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="2019-05-01"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_color"/>

    <TextView
        android:id="@+id/un_pay_order_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/common_list_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/order_unpaid"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_color"/>

    <TextView
        android:id="@+id/now_order_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/common_list_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/order_now"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_color"/>

    <TextView
        android:id="@+id/old_order_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/common_list_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/order_old"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_color"/>

</LinearLayout>