<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <!--标题区域-->
    <include layout="@layout/view_title_bar"/>

    <!--真实姓名区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/real_name_tv"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:text="@string/real_name_text"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/real_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/real_name_hint"
            android:maxLength="16"
            android:maxLines="1"
            android:padding="6dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <include layout="@layout/view_split_line"/>

    <!--身份证号区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/id_number_tv"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:text="@string/id_number_text"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/id_number_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/id_number_hint"
            android:maxLength="18"
            android:maxLines="1"
            android:padding="6dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <include layout="@layout/view_split_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/user_type_tv"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/user_type_text"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/adult_type_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/user_type_adult"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/student_type_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/user_type_student"
                android:textSize="16sp"/>
        </RadioGroup>

    </LinearLayout>

    <include layout="@layout/view_split_line"/>

    <!--提交按钮区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_btn_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/submit_text"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>
